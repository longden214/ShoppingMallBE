    <script src="~/Content/client/js/MovieController.js"></script>
    <script src="~/Content/client/assets/js/main.js"></script>

}

@section scripts{
    <script>
        $(document).ready(function () {
            $('#movie-filter-date').flatpickr({
                minDate: "today",
                dateFormat: "Y-m-d"
            });
        });
    </script>
}


<!-- Breadcrumbs-->
<section class="section-height-800 breadcrumb-modern parallax-container context-dark bg-gray-darkest d-none d-lg-block" data-parallax-img="@ViewBag.Banner.Image">
    <div class="parallax-content">
        <div class="bg-overlay-darker">
            <div class="container-wide section-34 section-md-60 section-lg-top-130 section-lg-bottom-155">
                <div class="d-none d-lg-block">
                    <div class="h1 breadcrumbs-custom-title">@ViewBag.Banner.description</div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="section-34 bg-selago">
    <div class="container">
        <ul class="list-inline list-inline-12 list-inline-icon breadcrumbs-list">
            <li><a href="index.html">Home</a></li>
            <li class="active">Movies</li>
        </ul>
    </div>
</section>
<div class="page-content">

    <!-- ==========Ticket-Search========== -->
    <section class="search-ticket-section padding-top pt-lg-0" style="background-color: #001232;">
        <div class="container">
            <div class="search-tab bg_img"  style="background-image: url('/Content/client/assets/images/ticket/ticket-bg01.jpg');">
                <div class="tab-area" style="margin-top:0;">
                    <div class="tab-item active">
                        <form class="ticket-search-form">
                            <div class="form-group large">
                                <input type="text" id="movie-search-client" placeholder="Search for Movies">
                                <button type="button" class="btn-search-movie"><i class="fas fa-search"></i></button>
                            </div>

                            <div class="form-group">
                                <div class="thumb">
                                    <img src="~/Content/client/assets/images/ticket/date.png" alt="ticket">
                                </div>
                                <span class="type">date</span>
                                <input type="text" value="" placeholder="Choose" id="movie-filter-date" style="width: 130px; padding-left: 10px; padding-right: 0;" />
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ==========Ticket-Search========== -->
    <!-- ==========Movie-Section========== -->
    <section class="movie-section padding-top padding-bottom" style="background-color: #001232;">
        <div class="container">
            <div class="row flex-wrap-reverse justify-content-center">

                <div class="col-lg-12 mb-50 mb-lg-0">
                    <div class="filter-tab tab">
                        <div class="filter-area" style="color: #dbe2fb;">
                            <div class="filter-main">
                                <div class="left">
                                    <div class="item">
                                        <span class="show">Show :</span>
                                        <select class="select-bar" id="select-movie-bar">
                                            <option value="12">12</option>
                                            <option value="15">15</option>
                                            <option value="18">18</option>
                                            <option value="21">21</option>
                                            <option value="24">24</option>
                                            <option value="27">27</option>
                                            <option value="30">30</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-area">
                            <div class="tab-item active">
                                <div class="movie-area movie__list-full mb-10">

                                </div>
                            </div>
                        </div>
                        <div class="pagination-area movie-client-pagination text-center">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ==========Movie-Section========== -->

</div>

<script id="movies-list-client" type="x-tmpl-mustache">
    <div class="movie-list">
        <div class="movie-thumb c-thumb">
            <a href="@Url.Action("MovieDetail", "Movie")?id={{MovieId}}" class="w-100 bg_img h-100" style="background-image: url({{Image}});" >
                <img class="d-sm-none" src="{{Image}}" alt="movie">
            </a>
        </div>
        <div class="movie-content bg-one">
            <h5 class="title" style="text-align: left;">
                <a href="@Url.Action("MovieDetail", "Movie")?id={{MovieId}}">{{Name}}</a>
            </h5>
            <div class="release" style="text-align: left;">
                <span>Duration : </span>
                <p class="duration" style="text-align: left;margin-bottom: 10px; display:inline-block;">{{Duration}} min</p>
            </div>
            <div class="movie-tags" style="margin-bottom: 10px;color:#ffffff;">
               <span style="margin-right: 5px">Genres : </span> <span> {{Genres}} </span>
            </div>
            <div class="release" style="text-align: left; margin-bottom: 20px">
                <span>Release Date : </span> <a href="javascript:void(0"> {{ReleaseDate}}</a>
            </div>
            <div class="release" style="text-align: left; margin-bottom: 20px">
                <span>Actors : </span>
                <p class="duration" style="text-align: left; display:inline-block;">{{Actors}}</p>
            </div>
            <div class="release" style="text-align: left; margin-bottom: 20px">
                <span>Age restriction : </span>
                <p class="duration" style="text-align: left; display:inline-block;">{{Age}}</p>
            </div>
            <div class="book-area">
                <div class="book-ticket">
                    <div class="react-item mr-auto">
                        <a href="@Url.Action("MovieTicket", "Movie")?id={{MovieId}}">
                            <div class="thumb">
                                <img src="/Content/client/assets/images/icons/book.png" alt="icons">
                            </div>
                            <span>book ticket</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</script>