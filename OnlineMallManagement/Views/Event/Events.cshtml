
@{
    ViewBag.Title = "Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section MovieCss{
    <style>
        .event__description p {
            width: 100%;
            white-space: pre-wrap;
            overflow: hidden;
            text-overflow: ellipsis;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            display: -webkit-box;
        }
    </style>
    }

<!-- Breadcrumbs-->
<section class="section-height-800 breadcrumb-modern parallax-container context-dark bg-gray-darkest d-none d-lg-block" data-parallax-img="@ViewBag.Banner.Image">
    <div class="parallax-content">
        <div class="bg-overlay-darker">
            <div class="container-wide section-34 section-md-60 section-lg-top-130 section-lg-bottom-155">
                <div class="d-none d-lg-block">
                    <div class="h1 breadcrumbs-custom-title">@ViewBag.Banner.description</div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="section-34 bg-selago">
    <div class="container">
        <ul class="list-inline list-inline-12 list-inline-icon breadcrumbs-list">
            <li><a href="/">Home</a></li>
            <li class="active">Events</li>
        </ul>
    </div>
</section>
<div class="page-content">
    <section class="section-90 section-md-120 text-left">
        <div class="container-wide container-wide-custom">
            <div class="row justify-content-sm-center">
                <div class="col-xl-12 offset-top-60 offset-xl-top-0">
                    <div class="row justify-content-sm-center">
                        @{ var i = 1; }
                        @foreach (var item in ViewBag.Events)
                        {
                            var isOffsetTop = i > 1 ? "offset-top-60" : "";
                            var isOffsetLgTop = (i == 3 || i==2) ? "offset-lg-top-0" : "";
                            <div class="col-md-8 col-xl-4 @isOffsetTop @isOffsetLgTop">
                                <!-- Post Event-->
                                <div class="post-event text-left">
                                    <div class="post-event-thumbnail-wrap">
                                        <!-- Thumbnail Rayen--><a class="thumbnail-rayen" data-lightgallery="item" href="@item.Image">
                                            <figure>
                                                <img width="570" style="height:256px !important" src="@item.Image" alt="">
                                                <figcaption><span class="icon icon-normal icon-lg mdi mdi-plus"></span></figcaption>
                                            </figure>
                                        </a>
                                        <div class="post-event-list">
                                            @{
                                                var startDate = item.StartDate.ToString("MMM, dd");
                                                var startTime = item.StartDate.ToString("h:mm tt");

                                                var price = "";
                                                if (item.Price > 0)
                                                {
                                                    price = item.Price.ToString();
                                                }
                                                else
                                                {
                                                    price = "Free";
                                                }

                                            }
                                            <ul class="list list-20">
                                                <li class="box-xs bg-accent text-center"><span class="icon icon-normal icon-sm mdi mdi-calendar text-white"></span><span class="d-block offset-top-0"><span class="text-small text-white">@startDate</span></span></li>
                                                <li class="box-xs bg-accent text-center"><span class="icon icon-normal icon-sm mdi mdi-clock text-white"></span><span class="d-block offset-top-0"><span class="text-small text-white">@startTime</span></span></li>
                                                <li class="box-xs bg-accent text-center"><span class="icon icon-normal icon-sm mdi mdi-ticket-account text-white"></span><span class="d-block offset-top-0"><span class="text-small text-white">@price</span></span></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="offset-top-20 inset-right-10">
                                        <h5><a href="@Url.Action("EventSingle","Event",new { id = item.Event_id })">@item.Title</a></h5>
                                        <div class="offset-top-15 event__description">
                                            <p>@item.Descriptions</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            i++;
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

