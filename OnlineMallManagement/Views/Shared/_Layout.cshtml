<!DOCTYPE html>
<html class="wide wow-animation" lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <script src="~/Content/client/js/3ts2ksMwXvKRuG480KNifJ2_JNM.js"></script>
    <title>@ViewBag.Title</title>
    @{Html.RenderAction("SEOWeb", "Home");}

    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=PT+Sans:400,700%7CMontserrat:400,700%7CPlayfair+Display:400,400i,700,700i,900,900i">

    @RenderSection("MovieCss", required: false)
    @RenderSection("Mapcss", required: false)

    <link href="~/Content/admin/assets/css/flatpickr.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Content/admin/app-assets/css/plugins/forms/pickers/form-flat-pickr.css">
    <link rel="stylesheet" href="~/Content/client/css/bootstrap.css">
    <link rel="stylesheet" href="~/Content/client/css/fonts.css">
    <link rel="stylesheet" href="~/Content/client/css/style.css">
</head>
<body>

    <div class="preloader">
        <div class="preloader-body">
            <div id="circular3dG">
                <div class="circular3dG" id="circular3d_1G"></div>
                <div class="circular3dG" id="circular3d_2G"></div>
                <div class="circular3dG" id="circular3d_3G"></div>
                <div class="circular3dG" id="circular3d_4G"></div>
                <div class="circular3dG" id="circular3d_5G"></div>
                <div class="circular3dG" id="circular3d_6G"></div>
                <div class="circular3dG" id="circular3d_7G"></div>
                <div class="circular3dG" id="circular3d_8G"></div>
            </div>
            <p>Loading...</p>
        </div>
    </div>
    <div class="page text-center">
        @{ Html.RenderAction("TopHeader", "Home"); }

        @RenderBody()

        @{ Html.RenderAction("BottomFooter", "Home"); }
    </div>

    <!-- Global Mailform Output-->
    <div class="snackbars" id="form-output-global">
        <p><span class="icon text-middle mdi mdi-check icon-xxs"></span><span class="mess-type"></span></p>
    </div>

    @RenderSection("MovieScripts", required: false)

    <script src="~/Content/client/js/core.min.js"></script>
    <script src="~/Content/client/js/script.js"></script>
    <script src="~/Content/admin/assets/js/flatpickr.js"></script>
    <script>

        $(document).ready(function () {
            $('#menu-top-header ul.rd-navbar-nav li a').filter(function () { return this.href == location.href }).parent().addClass('active').siblings().removeClass('active')
            $('#menu-top-header ul.rd-navbar-nav li a').click(function () {
                $(this).parent().addClass('active').siblings().removeClass('active')
            })

            if ($("#menu-top-header ul.rd-navbar-nav > li.rd-navbar--has-dropdown .rd-dropdown-item.active").length > 0) {
                $('#menu-top-header ul.rd-navbar-nav > li').removeClass('active');
                $("#menu-top-header ul.rd-navbar-nav > li.rd-navbar--has-dropdown .rd-dropdown-item.active").closest('.rd-navbar--has-dropdown').addClass('active');
                $("#menu-top-header ul.rd-navbar-nav > li.rd-navbar--has-dropdown .rd-dropdown-item").removeClass('active');
            }
        });
    </script>

    @RenderSection("Mapjs", required: false)
    @RenderSection("scripts", required: false)

</body>
</html>
