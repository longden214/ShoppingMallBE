
@{
    ViewBag.Title = "SaleSingle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumbs-->
<section class="section-height-800 breadcrumb-modern parallax-container context-dark bg-gray-darkest d-none d-lg-block" data-parallax-img="@ViewBag.Banner.Image">
    <div class="parallax-content">
        <div class="bg-overlay-darker">
            <div class="container-wide section-34 section-md-60 section-lg-top-130 section-lg-bottom-155">
                <div class="d-none d-lg-block">
                    <div class="h1 breadcrumbs-custom-title">@ViewBag.Banner.description</div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="section-34 bg-selago">
    <div class="container">
        <ul class="list-inline list-inline-12 list-inline-icon breadcrumbs-list">
            <li><a href="/">Home</a></li>
            <li><a href="#0">Pages</a></li>
            <li class="active">Sale Page</li>
        </ul>
    </div>
</section>
<div class="page-content">
    <!-- Sale Page-->
    <section class="section-90 text-left">
        <div class="container-wide container-wide-custom">
            <div class="row justify-content-sm-center justify-content-xl-between">
                <div class="col-md-8 col-lg-3 col-xxl-3"><a href="#"><img class="img-responsive img-semi-transparent-inverse center-block" src="@ViewBag.Sales.Shop.Logo" style="width:155px;" alt=""></a></div>
                <div class="col-md-8 col-lg-6 col-xxl-5 offset-top-40 offset-lg-top-0">
                    <div class="inset-xxl-right-70">
                        <p>@ViewBag.Sales.Shop.Description</p>
                    </div>
                </div>
                <div class="col-md-8 col-lg-3 col-xxl-3 offset-top-40 offset-lg-top-0">
                    <!-- List-->
                    <ul class="list list-15 text-left p">
                        <li><span class="icon icon-sm mdi mdi-map-marker text-bermuda text-middle"></span><span class="text-middle inset-left-5">@ViewBag.Sales.Shop.Address</span></li>
                        <li><a class="text-gray-light" href="tel:#"><span class="icon icon-sm mdi mdi-phone text-bermuda text-middle"></span><span class="text-middle inset-left-5">@ViewBag.Sales.Shop.Phone</span></a></li>
                        <li><a class="text-gray-light" href="mailto:#"><span class="icon icon-sm mdi mdi-email-outline text-bermuda text-middle"></span><span class="text-middle inset-left-5">@ViewBag.Sales.Shop.Email</span></a></li>
                        <li><a class="text-gray-light" href="#"><span class="icon icon-sm mdi mdi-web text-bermuda text-middle"></span><span class="text-middle inset-left-5">@ViewBag.Sales.Shop.Url_web</span></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- Save 25% at Male Clothes at Blossom-->
    <section class="section-90 section-lg-0 bg-selago">
        <div class="container-wide">
            <div class="row justify-content-sm-center justify-content-lg-end offset-top-0">
                <div class="col-sm-10 col-lg-8 col-xl-6 section-image-aside section-image-aside-left text-left">
                    <div class="section-image-aside-img d-none d-lg-block" style="background-image: url(@ViewBag.Sales.Shop.Photo); background-position: center center;"></div>
                    <div class="section-image-aside-body inset-lg-left-35 inset-lg-right-35 section-md-60 section-lg-120 inset-xl-right-45 inset-xl-left-75 inset-xxl-right-85 inset-xxl-left-140">
                        <div class="divider bg-bermuda hr-left-0"></div>
                        <div class="offset-top-20">
                            <h3>Save @ViewBag.Sales.Sale1 % <br class="d-none d-xl-inline-block"> at @ViewBag.Sales.Shop.ShopName</h3>
                        </div>
                        @if (ViewBag.Shop.Service.Service_area == 9)
                        {
                            <div class="offset-top-35 offset-lg-top-60 text-center text-md-left">
                                <!-- Owl Carousel-->
                                <div class="owl-carousel owl-dots-offset-top-55 owl-dots-sm-left" data-items="1" data-md-items="2" data-lg-items="2" data-stage-padding="0" data-loop="false" data-margin="30" data-mouse-drag="false" data-dots="true">
                                    @foreach (var item in ViewBag.Product)
                                    {
                                        <div class="owl-item">
                                            <!-- Thumbnail Rayen--><a href="shop-single.html">
                                                <figure class="thumbnail-rayen thumbnail-rayen-primary thumbnail-rayen-product">
                                                    <img width="280" height="280" src="@item.Images" alt="">
                                                    <figcaption>
                                                        <p class="font-weight-bold text-white">@item.Pro_name</p>
                                                    </figcaption>
                                                </figure>
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

