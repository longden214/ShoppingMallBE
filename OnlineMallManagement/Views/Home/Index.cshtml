    </section>
    <section class="section-80 section-md-120">
        <div class="inset-lg-left-35 inset-xxl-left-125 inset-lg-right-35 inset-xxl-right-125">
            <div class="container-wide container-wide-custom">
                <hr class="divider bg-bermuda">
                <div class="offset-top-20">
                    <h3>Events</h3>
                </div>
                <div class="row justify-content-center justify-content-xl-start text-left offset-top-35 offset-md-top-60 row-50">
                    @foreach (var item in ViewBag.Events)
                    {
                        <div class="col-lg-6">
                            <div class="row justify-content-sm-center justify-content-xl-start row-30 text-center text-md-left">
                                <div class="col-md-5 col-lg-10 col-xl-5 d-flex justify-content-center">
                                    <img class="img-cover img-responsive" src="@item.Image" width="320" height="442" alt="">
                                </div>
                                <div class="col-md-6 col-lg-10 col-xl-6">
                                    <ul class="list-inline list-inline-20">
                                        @{
                                            var startDate = item.StartDate.ToString("MMM, dd");
                                            var startTime = item.StartDate.ToString("h:mm tt");
                                        }
                                        <li><span class="icon icon-normal icon-sm mdi mdi-calendar text-bermuda text-middle"></span><span class="text-middle inset-left-10">@startDate</span></li>
                                        <li><span class="icon icon-normal icon-sm mdi mdi-clock text-bermuda text-middle"></span><span class="text-middle inset-left-10">@startTime</span></li>
                                    </ul>
                                    <div class="offset-top-25">
                                        <h5><a href="@Url.Action("EventSingle","Event",new { id = item.Event_id })">@item.Title</a></h5>
                                    </div>
                                    <div class="offset-top-25 event-description__home">
                                        <p>@item.Descriptions</p>
                                    </div>
                                    <div class="offset-top-20">
                                        @{
                                            var price = "";
                                            if (item.Price > 0)
                                            {
                                                price = item.Price.ToString();
                                            }
                                            else
                                            {
                                                price = "Free Entry";
                                            }
                                        }
                                        <div class="h5-variant-2 font-weight-bold font-italic text-gray">@price</div>
                                    </div>
                                    <div class="offset-top-25"><a class="btn btn-width-175 btn-primary-outline" href="@Url.Action("EventSingle","Event",new { id = item.Event_id })">learn more</a></div>
                                </div>
                            </div>
                        </div>

                    }
                </div><a class="btn btn-width-200 btn-bermuda offset-top-35 offset-md-top-65" href="@Url.Action("Events","Event")">view all events</a>
            </div>
        </div>
    </section>
    <section class="section-80 section-md-120 bg-selago">
        <div class="inset-lg-left-35 inset-xxl-left-125 inset-lg-right-35 inset-xxl-right-125">
            <div class="container-wide container-wide-custom">
                <hr class="divider bg-bermuda">
                <div class="offset-top-20">
                    <h3>Latest News</h3>
                </div>
                <div class="row justify-content-sm-center text-left offset-top-35 offset-md-top-60">
                    @foreach (var item in ViewBag.Blogs)
                    {

                        <div class="col-md-10 col-lg-6 col-xl-4 col-xxl-5 offset-lg-top-5">
                            <div class="post-box shadow-drop post-box-max-width-none d-block">
                                <div class="post-box-img-wrap">
                                    <a class="thumbnail-robben" href="@Url.Action("BlogPost","Blog",new { id = item.BlogId })">
                                        <span class="thumbnail-robben-img-wrap post-box-top-radius">
                                            <img class="img-responsive center-block post-box-top-radius" src="@item.Images" width="320" height="442" alt="">
                                        </span>
                                    </a>
                                </div>
                                <div class="post-box-caption post-box-bottom-radius bg-default">
                                    <h5 class="offset-top-15"><a href="@Url.Action("BlogPost","Blog",new { id = item.BlogId })">@item.Title</a></h5>
                                    <p class="offset-top-20 blog_description">@item.Description</p>
                                    <ul class="list-inline list-inline-20 offset-top-22">
                                        <li>
                                            <span class="icon icon-normal icon-sm mdi mdi-calendar text-bermuda text-middle"></span>
                                            <span class="text-middle inset-left-10 font-italic">@item.BlogTime.ToString("dd/MM/yyyy")</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                    }
                </div><a class="btn btn-width-200 btn-primary offset-top-35 offset-md-top-65" href="@Url.Action("BlogClassic","Blog")">view all news</a>
            </div>
        </div>
    </section>

