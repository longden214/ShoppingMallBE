
@{
    Layout = null;
}

<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">
<!-- BEGIN: Head-->

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,user-scalable=0,minimal-ui">
    <meta name="author" content="PIXINVENT">
    <title>Admin</title>
    <link rel="apple-touch-icon" href="~/Content/admin/app-assets/images/ico/apple-icon-120.png">
    <link rel="shortcut icon" type="image/x-icon" href="@AppState["favicon"]">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,400;0,500;0,600;1,400;1,500;1,600" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <!-- BEGIN: Vendor CSS-->
    <link rel="stylesheet" type="text/css" href="~/Content/admin/app-assets/vendors/css/vendors.min.css">
    <!-- END: Vendor CSS-->
    <!-- BEGIN: Theme CSS-->
    <link rel="stylesheet" type="text/css" href="~/Content/admin/app-assets/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="~/Content/admin/app-assets/css/bootstrap-extended.css">
    <link rel="stylesheet" href="~/Content/client/css/fonts.css">
    <link rel="stylesheet" type="text/css" href="~/Content/admin/app-assets/css/colors.css">
    <link rel="stylesheet" type="text/css" href="~/Content/admin/assets/css/toastr.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/admin/assets/css/flatpickr.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/admin/app-assets/css/plugins/forms/pickers/form-flat-pickr.css">
    @RenderSection("Styles", required: false)
    <link rel="stylesheet" type="text/css" href="~/Content/admin/app-assets/css/components.css">
    <link rel="stylesheet" type="text/css" href="~/Content/admin/app-assets/css/themes/dark-layout.css">
    <link rel="stylesheet" type="text/css" href="~/Content/admin/app-assets/css/themes/semi-dark-layout.css">
    <!-- BEGIN: Page CSS-->
    <link rel="stylesheet" type="text/css" href="~/Content/admin/app-assets/css/core/menu/menu-types/vertical-menu.css">
    <!-- END: Page CSS-->
    <!-- BEGIN: Custom CSS-->
    <link rel="stylesheet" type="text/css" href="~/Content/admin/assets/css/style.css">
    <!-- END: Custom CSS-->
    <style>
        .main-menu .navbar-header.expanded .navbar-brand .brand-logo img {
            max-width: 120px;
        }
    </style>
</head>
<!-- END: Head-->
<!-- BEGIN: Body-->

<body class="vertical-layout vertical-menu-modern  navbar-floating footer-static   menu-collapsed" data-open="click" data-menu="vertical-menu-modern" data-col="">

    <!-- BEGIN: Header-->
    <nav class="header-navbar navbar navbar-expand-lg align-items-center floating-nav navbar-light navbar-shadow">
        <div class="navbar-container d-flex content">
            <div class="bookmark-wrapper d-flex align-items-center">
                <ul class="nav navbar-nav d-xl-none">
                    <li class="nav-item"><a class="nav-link menu-toggle" href="javascript:void(0);"><i class="ficon" data-feather="menu"></i></a></li>
                </ul>
                <ul class="nav navbar-nav">
                    <li class="nav-item d-none d-lg-block"><a class="nav-link nav-link-style"><i class="ficon" data-feather="moon"></i></a></li>
                </ul>
            </div>
            <ul class="nav navbar-nav align-items-center ml-auto">
                <li class="nav-item dropdown dropdown-user">
                    <a class="nav-link dropdown-toggle dropdown-user-link" id="dropdown-user" href="javascript:void(0);" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <div class="user-nav d-sm-flex d-none">
                            <span class="user-name font-weight-bolder acc-displayName">@AppState["displayName"]</span>
                            @if (User.IsInRole("Admin"))
                            {
                                <span class="user-status">Admin</span>
                            }
                            else if (User.IsInRole("User"))
                            {
                                <span class="user-status">User</span>
                            }
                            else
                            {
                                <span class="user-status">Customer</span>
                            }
                        </div>
                        <span class="avatar bg-primary">
                            <span class="avatar-content">@AppState["displayName"].ToString().Remove(1).ToUpper()</span>
                            <span class="avatar-status-online"></span>
                        </span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown-user">
                        <a class="dropdown-item" href="@Url.Action("Logout","Account")"><i class="mr-50" data-feather="power"></i> Logout</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    <!-- END: Header-->
    <!-- BEGIN: Main Menu-->
    <div class="main-menu menu-fixed menu-light menu-accordion menu-shadow" data-scroll-to-active="true">
        <div class="navbar-header">
            <ul class="nav navbar-nav flex-row">
                <li class="nav-item mr-auto">
                    <a class="navbar-brand" href="javascripts:void(0)">
                        <span class="brand-logo">
                            <img src="@AppState["logo"]" alt="logo" />
                        </span>
                    </a>
                </li>
                <li class="nav-item nav-toggle"><a class="nav-link modern-nav-toggle pr-0" data-toggle="collapse"><i class="d-block d-xl-none text-primary toggle-icon font-medium-4" data-feather="x"></i><i class="d-none d-xl-block collapse-toggle-icon font-medium-4  text-primary" data-feather="disc" data-ticon="disc"></i></a></li>
            </ul>
        </div>
        <div class="shadow-bottom"></div>
        <div class="main-menu-content" style="margin-top: 20px;">
            @if (User.Identity.IsAuthenticated)
            {

                <ul class="navigation navigation-main" id="main-menu-navigation" data-menu="menu-navigation">
                    <li class="active nav-item">
                        <a class="d-flex align-items-center" href="@Url.Action("Index", "Dashboard")">
                            <i data-feather="home"></i>
                            <span class="menu-title text-truncate" data-i18n="Home">Home</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="d-flex align-items-center" href="@Url.Action("Index", "Contact")">
                            <i data-feather='message-square'></i>
                            <span class="menu-title text-truncate" data-i18n="Home">Feedback</span>
                        </a>
                    </li>
                    <li class=" nav-item">
                        <a class="d-flex align-items-center" href="@Url.Action("Index", "Screening")">
                            <i data-feather='film'></i>
                            <span class="menu-title text-truncate" data-i18n="Page Layouts">Cinema</span>
                            <span class="badge badge-light-danger badge-pill ml-auto mr-1">5</span>
                        </a>
                        <ul class="menu-content">
                            <li>
                                <a class="d-flex align-items-center" href="@Url.Action("Index", "CategoryMovie")">
                                    <i data-feather="circle"></i><span class="menu-item text-truncate" data-i18n="Collapsed Menu">Genre</span>
                                </a>
                            </li>
                            <li>
                                <a class="d-flex align-items-center" href="@Url.Action("Index", "Movie")">
                                    <i data-feather="circle"></i><span class="menu-item text-truncate" data-i18n="Layout Boxed">Movie</span>
                                </a>
                            </li>
                            <li>
                                <a class="d-flex align-items-center" href="@Url.Action("Index", "Screening")">
                                    <i data-feather="circle"></i><span class="menu-item text-truncate" data-i18n="Layout Boxed">Screening</span>
                                </a>
                            </li>
                            <li>
                                <a class="d-flex align-items-center" href="@Url.Action("Index", "Room")">
                                    <i data-feather="circle"></i><span class="menu-item text-truncate" data-i18n="Layout Boxed">Room</span>
                                </a>
                            </li>
                            <li>
                                <a class="d-flex align-items-center" href="@Url.Action("Index", "Seat")">
                                    <i data-feather="circle"></i><span class="menu-item text-truncate" data-i18n="Layout Boxed">Seat</span>
                                </a>
                            </li>
                            <li>
                                <a class="d-flex align-items-center" href="@Url.Action("Index", "OrderDetails")">
                                    <i data-feather="circle"></i><span class="menu-item text-truncate" data-i18n="Layout Boxed">Order</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="d-flex align-items-center" href="@Url.Action("Index", "User")">
                                <i data-feather='users'></i>
                                <span class="menu-title text-truncate" data-i18n="Home">User</span>
                            </a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="d-flex align-items-center" href="@Url.Action("Index", "Area")">
                            <i data-feather='map'></i>
                            <span class="menu-title text-truncate" data-i18n="Home">Area</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="d-flex align-items-center" href="@Url.Action("Index", "Services")">
                            <i data-feather='package'></i>
                            <span class="menu-title text-truncate" data-i18n="Home">Service</span>
                        </a>
                    </li>
                    <li class=" nav-item">
                        <a class="d-flex align-items-center" href="@Url.Action("Index", "Shop")">
                            <i data-feather='shopping-bag'></i>
                            <span class="menu-title text-truncate" data-i18n="Page Layouts">Store</span>
                            <span class="badge badge-light-danger badge-pill ml-auto mr-1">3</span>
                        </a>
                        <ul class="menu-content">
                            <li>
                                <a class="d-flex align-items-center" href="@Url.Action("Index", "Shop")">
                                    <i data-feather="circle"></i><span class="menu-item text-truncate" data-i18n="Collapsed Menu">Shop</span>
                                </a>
                            </li>
                            <li>
                                <a class="d-flex align-items-center" href="@Url.Action("Index", "Sales")">
                                    <i data-feather="circle"></i><span class="menu-item text-truncate" data-i18n="Layout Boxed">Sale</span>
                                </a>
                            </li>
                            <li>
                                <a class="d-flex align-items-center" href="@Url.Action("Index", "Events")">
                                    <i data-feather="circle"></i><span class="menu-item text-truncate" data-i18n="Layout Boxed">Event</span>
                                </a>
                            </li>

                        </ul>
                    </li>
                    <li class=" nav-item">
                        <a class="d-flex align-items-center" href="@Url.Action("Index", "Blog")">
                            <i class="far fa-newspaper"></i>
                            <span class="menu-title text-truncate" data-i18n="Page Layouts">News</span>
                            <span class="badge badge-light-danger badge-pill ml-auto mr-1">2</span>
                        </a>
                        <ul class="menu-content">
                            <li>
                                <a class="d-flex align-items-center" href="@Url.Action("Index", "CategoryBlog")">
                                    <i data-feather="circle"></i><span class="menu-item text-truncate" data-i18n="Collapsed Menu">Category Blog</span>
                                </a>
                            </li>
                            <li>
                                <a class="d-flex align-items-center" href="@Url.Action("Index", "Blog")">
                                    <i data-feather="circle"></i><span class="menu-item text-truncate" data-i18n="Layout Boxed">Blog</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="d-flex align-items-center" href="@Url.Action("Index", "Account")">
                            <i data-feather='info'></i>
                            <span class="menu-title text-truncate" data-i18n="Home">Account</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="d-flex align-items-center" href="@Url.Action("Index", "Banner")">
                            <i data-feather='image'></i>
                            <span class="menu-title text-truncate" data-i18n="Home">Banner</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="d-flex align-items-center" href="@Url.Action("Index", "Gallery")">
                            <i class="far fa-image"></i>
                            <span class="menu-title text-truncate" data-i18n="Home">Gallery</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="d-flex align-items-center" href="@Url.Action("Index", "Config")">
                            <i data-feather='settings'></i>
                            <span class="menu-title text-truncate" data-i18n="Home">Configuration</span>
                        </a>
                    </li>

                </ul>
            }
        </div>
    </div>
    <!-- END: Main Menu-->
    @{
        var mailClass = "";

        if (ViewBag.MaillClass != null)
        {
            mailClass = ViewBag.MaillClass;
        }
    }
    <!-- BEGIN: Content-->
    <div class="app-content content @mailClass">
        <div class="content-overlay"></div>
        <div class="header-navbar-shadow"></div>
        <div class="content-wrapper">

            @RenderBody()

        </div>
    </div>
    <!-- END: Content-->

    <div class="sidenav-overlay"></div>
    <div class="drag-target"></div>


    <button class="btn btn-primary btn-icon scroll-top" type="button"><i data-feather="arrow-up"></i></button>
    <!-- END: Footer-->

    <script src="~/Content/admin/app-assets/vendors/js/vendors.min.js"></script>
    <script src="~/Content/admin/app-assets/js/core/app-menu.js"></script>
    <script src="~/Content/admin/assets/js/plugins/ckeditor/ckeditor.js"></script>
    <script src="~/Content/admin/assets/js/plugins/ckfinder/ckfinder.js"></script>
    <script src="~/Content/admin/assets/js/toastr.min.js"></script>
    <script src="~/Content/admin/assets/js/flatpickr.js"></script>
    <script src="~/Content/admin/app-assets/js/core/app.js"></script>

    <script>
        $(window).on('load', function () {
            if (feather) {
                feather.replace({
                    width: 14,
                    height: 14
                });
            }
        })


        $(document).ready(function () {
            $('#main-menu-navigation li a').filter(function () { return this.href == location.href }).parent().addClass('active').siblings().removeClass('active')
            $('#main-menu-navigation li a').click(function () {
                $(this).parent().addClass('active').siblings().removeClass('active')
            })
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
<!-- END: Body-->

</html>