@model OnlineMallManagement.Models.Shop_Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}


<div class="content-body">
    <section id="basic-horizontal-layouts">
        <div class="row">
            <div class="col-md-12 col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Create Product</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("Create", "Shop_Product", FormMethod.Post, new { @class = "form form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <input type="hidden" name="shopId" value="@ViewBag.ShopId" />
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group row">
                                        <div class="col-sm-3 col-form-label">
                                            Product
                                        </div>
                                        <div class="col-sm-9">
                                            @Html.EditorFor(model => model.Pro_name, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Pro_name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group row">
                                        <div class="col-sm-3 col-form-label">
                                            <label class="form-label" for="first-name-vertical">Image</label>
                                        </div>
                                        <div class="col-sm-9">
                                            <fieldset>
                                                <div class="input-group">
                                                    <button class="btn btn-outline-primary waves-effect btn-banner__movie" id="btn-image-photoShop" type="button" style="border-top-right-radius: 0;border-bottom-right-radius: 0;">
                                                        Choose
                                                    </button>
                                                    @Html.EditorFor(model => model.Images, new { htmlAttributes = new { @class = "form-control", @id = "edit-img-photoShop", @placeholder = "Button on left" } })
                                                </div>
                                            </fieldset>
                                            @Html.ValidationMessageFor(model => model.Images, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group row">
                                        <div class="col-sm-3 col-form-label">
                                            Status
                                        </div>
                                        <div class="col-sm-9">
                                            <div class="demo-inline-spacing">
                                                @Html.RadioButtonFor(x => x.Status, "true", new { Checked = "checked", @style = "margin-top:0px;" }) <span style="margin-top:0px;">Show</span>
                                                @Html.RadioButtonFor(x => x.Status, "false", new { @style = "margin-top:0px;" }) <span style="margin-top:0px;">Hide</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-9 offset-sm-3">
                                    <button type="submit" class="btn btn-primary mr-1 waves-effect waves-float waves-light">Submit</button>
                                    <button type="reset" class="btn btn-outline-secondary waves-effect">Reset</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div>
        <a href="@Url.Action("Index","Shop_Product",new { Shopid = ViewBag.ShopId })" class="dt-button btn btn-outline-primary waves-effect" tabindex="0" aria-controls="DataTables_Table_0" type="button"><span>Back To List</span></a>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Content/admin/assets/js/scripts.js"></script>

}
