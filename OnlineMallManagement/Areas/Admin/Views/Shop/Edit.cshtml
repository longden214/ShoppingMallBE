@model OnlineMallManagement.Models.Shop

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<div class="content-body">
    <section id="multiple-column-form">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Create Shop</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("Edit", "Shop", FormMethod.Post, new { @class = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.ShoId)
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="ShopName">Shop Name</label>
                                        @Html.EditorFor(model => model.ShopName, new { htmlAttributes = new { @class = "form-control", @id = "shop_name" } })
                                        @Html.ValidationMessageFor(model => model.ShopName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="ServiceId">Service</label>
                                        @Html.DropDownList("ServiceId", (IEnumerable<SelectListItem>)ViewBag.Serviec_Id, "-- Select --", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.ServiceId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="Address">Address</label>
                                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="Phone">Phone</label>
                                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="Email">Email</label>
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="Url_web">Url web</label>
                                        @Html.EditorFor(model => model.Url_web, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Url_web, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="slug">Slug</label>
                                        @Html.EditorFor(model => model.slug, new { htmlAttributes = new { @class = "form-control", @id = "shop_slug" } })
                                        @Html.ValidationMessageFor(model => model.slug, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label class="form-label" for="first-name-vertical">Photo</label>
                                        <fieldset>
                                            <div class="input-group">
                                                <button class="btn btn-outline-primary waves-effect btn-banner__movie" id="btn-image-photoShop" type="button" style="border-top-right-radius: 0;border-bottom-right-radius: 0;">
                                                    Choose
                                                </button>
                                                @Html.EditorFor(model => model.Photo, new { htmlAttributes = new { @class = "form-control", @id = "edit-img-photoShop", @placeholder = "Button on left" } })
                                            </div>
                                        </fieldset>
                                        @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label class="form-label" for="first-name-vertical">Logo</label>
                                        <fieldset>
                                            <div class="input-group">
                                                <button class="btn btn-outline-primary waves-effect btn-banner__movie" id="btn-image-logoShop" type="button" style="border-top-right-radius: 0;border-bottom-right-radius: 0;">
                                                    Choose
                                                </button>
                                                @Html.EditorFor(model => model.Logo, new { htmlAttributes = new { @class = "form-control", @id = "edit-img-logoShop", @placeholder = "Button on left" } })
                                            </div>
                                        </fieldset>
                                        @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="Meta_title">Meta_title</label>
                                        @Html.EditorFor(model => model.Meta_title, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Meta_title, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="Meta_keyword">Meta_keyword</label>
                                        @Html.EditorFor(model => model.Meta_keyword, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Meta_keyword, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <div class="mb-1 ">
                                            <label for="Meta_description">Meta_description</label>
                                            @Html.EditorFor(model => model.Meta_description, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Meta_description, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="Description">Description</label>
                                        <textarea class="form-control" name="Description" rows="3" placeholder="Description...">@Html.DisplayFor(model => model.Description)</textarea>
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <div class="demo-inline-spacing">
                                            <label for="Status"><b>Status</b></label>
                                            @Html.RadioButtonFor(x => x.Status, "true") <span>Show</span>
                                            @Html.RadioButtonFor(x => x.Status, "false") <span>Hide</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary mr-1 waves-effect waves-float waves-light">Submit</button>
                                    <button type="reset" class="btn btn-outline-secondary waves-effect">Reset</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div>
        <a href="@Url.Action("Index","Shop")" class="dt-button btn btn-outline-primary waves-effect" tabindex="0" aria-controls="DataTables_Table_0" type="button"><span>Back To List</span></a>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Content/admin/assets/js/scripts.js"></script>
}
