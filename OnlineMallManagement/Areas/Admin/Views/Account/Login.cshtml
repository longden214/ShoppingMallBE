@model OnlineMallManagement.Areas.Admin.Data.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_login.cshtml";
}

<div class="content-header row">
</div>
<div class="content-body">
    <div class="auth-wrapper auth-v1 px-2">
        <div class="auth-inner py-2">
            <!-- Login v1 -->
            <div class="card mb-0">
                <div class="card-body">
                    <a href="javascript:void(0);" class="brand-logo">
                        <img src="~/Content/client/images/logo-202x56.png" class="rounded mr-50" alt="profile image" width="100">
                    </a>

                    <h4 class="card-title mb-1">Welcome to AudreyMall! 👋</h4>
                    <p class="card-text mb-2">Please sign-in to your account and start the adventure</p>

                    @using (Html.BeginForm(new { @class = "auth-login-form mt-2" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label for="login-uname" class="form-label">UserName</label>
                            @Html.TextBoxFor(model => model.username, new { @class = "form-control", @id = "login-uname", @placeholder = "UserName", @tabindex = "1", @autofocus = "autofocus" })
                        </div>

                        <div class="form-group">
                            <div class="d-flex justify-content-between">
                                <label for="login-password">Password</label>
                                @*<a href="@Url.Action("ForgotPassword","Account")">
                                    <small>Forgot Password?</small>
                                </a>*@
                            </div>
                            <div class="input-group input-group-merge form-password-toggle">
                                @Html.PasswordFor(model => model.password, new { @class = "form-control form-control-merge ", @id = "login-password", @placeholder = "Password", @tabindex = "2" })

                                <div class="input-group-append">
                                    <span class="input-group-text cursor-pointer"><i data-feather="eye"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                @Html.CheckBoxFor(model => model.RememberMe, new { @class = "custom-control-input", @type = "checkbox", @id = "remember-me", @tabindex = "3" })
                                <label class="custom-control-label" for="remember-me"> Remember Me </label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block mb-2" tabindex="4">Sign in</button>
                        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })

                    }

                </div>
            </div>
            <!-- /Login v1 -->
        </div>
    </div>
</div>

