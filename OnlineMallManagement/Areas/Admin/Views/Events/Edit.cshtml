@model OnlineMallManagement.Models.Event

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<div class="content-body">
    <section id="multiple-column-form">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Update Event</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("Edit", "Events", FormMethod.Post, new { @class = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Event_id)
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label class="form-label" for="prefix">Title</label>
                                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @id = "event_name" } })
                                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label class="form-label" for="date">Start Date</label>
                                        @{
                                            var StartDate = Model.StartDate.Value.ToString("yyyy-MM-dd HH:mm");
                                        }
                                        @Html.EditorFor(model => StartDate, new { htmlAttributes = new { @class = "form-control", @id = "ev-start-date", @placeholder = "YYYY-MM-DD HH:MM" } })
                                        @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label class="form-label" for="time">End Date</label>
                                        @{
                                            var EndDate = Model.EndDate.Value.ToString("yyyy-MM-dd HH:mm");
                                        }
                                        @Html.EditorFor(model => EndDate, new { htmlAttributes = new { @class = "form-control", @id = "ev-end-date", @placeholder = "YYYY-MM-DD HH:MM" } })
                                        @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label class="form-label" for="numeral-formatting">Price</label>
                                        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="ShopName">Shop</label>
                                        @Html.DropDownList("Shop_ShoId", (IEnumerable<SelectListItem>)ViewBag.Shop_Id, "-- Select --", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Shop_ShoId, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label class="form-label" for="custom-delimiters">Address</label>
                                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label class="form-label" for="first-name-vertical">Image</label>
                                        <fieldset>
                                            <div class="input-group">
                                                <button class="btn btn-outline-primary waves-effect btn-banner__movie" id="btn-image-event" type="button" style="border-top-right-radius: 0;border-bottom-right-radius: 0;">
                                                    Choose
                                                </button>
                                                @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control", @id = "edit-img-event", @placeholder = "Button on left" } })
                                            </div>
                                        </fieldset>
                                        @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label class="form-label" for="prefix">Slug</label>
                                        @Html.EditorFor(model => model.slug, new { htmlAttributes = new { @class = "form-control", @id = "event_slug" } })
                                        @Html.ValidationMessageFor(model => model.slug, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="Meta_title">Meta_title</label>
                                        @Html.EditorFor(model => model.Meta_title, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Meta_title, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="Meta_keyword">Meta_keyword</label>
                                        @Html.EditorFor(model => model.Meta_keyword, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Meta_keyword, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <div class="mb-1 ">
                                            <label for="Meta_description">Meta_description</label>
                                            @Html.EditorFor(model => model.Meta_description, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Meta_description, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <div class="demo-inline-spacing">
                                            <label for="Status"><b>Status</b></label>
                                            @Html.RadioButtonFor(x => x.Status, "true") <span>Show</span>
                                            @Html.RadioButtonFor(x => x.Status, "false") <span>Hide</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="Description">Description</label>
                                        <textarea class="form-control" name="Descriptions" rows="3" placeholder="Description...">@Html.DisplayFor(model=>model.Descriptions)</textarea>
                                        @Html.ValidationMessageFor(model => model.Descriptions, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary mr-1 waves-effect waves-float waves-light">Update</button>
                                    <button type="reset" class="btn btn-outline-secondary waves-effect">Reset</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div>
        <a href="@Url.Action("Index","Events")" class="dt-button btn btn-outline-primary waves-effect" tabindex="0" aria-controls="DataTables_Table_0" type="button"><span>Back To List</span></a>
    </div>
</div>


@section Styles {
    <link href="~/Content/admin/assets/css/flatpickr.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Content/admin/app-assets/css/plugins/forms/pickers/form-flat-pickr.css">
}

@section Scripts {

    <script src="~/Content/admin/assets/js/flatpickr.js"></script>
    <script src="~/Content/admin/assets/js/scripts.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $('#ev-start-date').flatpickr({
            enableTime: true,
            minDate: "today",
            dateFormat: "Y-m-d H:i",
        });
        $('#ev-end-date').flatpickr({
            enableTime: true,
            minDate: "today",
            dateFormat: "Y-m-d H:i",
        });

    </script>
}
