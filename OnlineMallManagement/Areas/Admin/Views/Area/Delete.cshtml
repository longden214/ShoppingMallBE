@model OnlineMallManagement.Models.Area

@{
    ViewBag.Title = "Area/Delete";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AreaId)
        <section id="input-mask-wrapper">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Delete Area</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12  col-sm-12 mb-2">
                                    <label class="form-label" for="credit-card">AreaName</label>
                                    <input type="text" class="form-control" value="@Html.DisplayFor(model => model.AreaName)" readonly>
                                </div>
                                <div class="col-12  col-sm-12 mb-2">
                                    <label class="form-label" for="numeral-formatting">CreatedDate</label>
                                    <input type="text" class="form-control" value="@Html.DisplayFor(model => model.CreatedDate)" readonly>
                                </div>
                                <div class="col-12  col-sm-12 mb-2">
                                    <label class="form-label" for="numeral-formatting">ModifiedDate</label>
                                    <input type="text" class="form-control" name="Title" value="@Html.DisplayFor(model=>model.ModifiedDate)" readonly />
                                </div>
                                <div class="col-12 d-flex flex-sm-row flex-column mt-2">
                                    <button type="submit" class="btn btn-primary mb-1 mb-sm-0 me-0 me-sm-1 waves-effect waves-float waves-light">Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div>
            <a href="@Url.Action("Index","Area")" class="dt-button btn btn-outline-primary waves-effect" tabindex="0" aria-controls="DataTables_Table_0" type="button"><span>Back To List</span></a>
        </div>
    </div>
}
